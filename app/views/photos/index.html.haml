%html
  %head
    %title Monociclo
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag 'application'
%body{ class: params[:action] }
  .wrapper
    .content
      .album
        %h1 Albumes de Fotos
        = link_to "Nuevo Ã¡lbum", new_album_path, :class => "new_album"
        = select_tag "albums", "<option>- - Cargando - -</option>".html_safe
        %ul.droppable
      .photos
        = form_for :photo, :html => { :multipart => true } do |form|
          = form.file_field :photo
          = submit_tag
        - @photo.each do |photo|
          .image{ data: { id: photo.id } }
            = link_to image_tag("boton.png"), photo, :method => :delete
            = image_tag(photo.photo.url(:medium))

      .clear

